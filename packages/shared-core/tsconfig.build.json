{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "outDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "@budibase/types": ["../types/src"]
    },
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.spec.js", "__mocks__", "src/tests"]
}
