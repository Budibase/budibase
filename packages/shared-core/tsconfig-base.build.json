{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["**/*.js", "**/*.ts", "package.json"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.js",
    "__mocks__"
  ]
}
