{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "paths": {
      "@budibase/*": [
        "../*/src/index.ts",
        "../*/src/index.js",
        "../*",
        "../../node_modules/@budibase/*"
      ],
      "assets/*": ["assets/*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": []
}
