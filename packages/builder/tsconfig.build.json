{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2019"],
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.json", "**/*.spec.ts", "**/*.spec.js"]
}
