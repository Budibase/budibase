{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "preserve",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@budibase/types": ["../types/src"],
      "@budibase/shared-core": ["../shared-core/src"],
      "@budibase/bbui": ["../bbui/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
