{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "manifest.json": ["./manifest.json"],
      "@budibase/*": [
        "../*/src/index.ts",
        "../*/src/index.js",
        "../*",
        "../../node_modules/@budibase/*"
      ],
      "@/*": ["./src/*"],
      "*": ["./src/*"]
    }
  }
}
