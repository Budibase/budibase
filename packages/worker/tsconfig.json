{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "types": [ "node", "jest"],
  },
  "references": [
    { "path": "../backend-core/tsconfig.build.json" }
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.json",
    "**/*.spec.ts",
    "**/*.spec.js"
  ]
}
