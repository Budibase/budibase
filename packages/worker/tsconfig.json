{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@budibase/types": ["../types/src"],
      "@budibase/backend-core": ["../backend-core/src"],
      "@budibase/backend-core/*": ["../backend-core/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "references": [
    { "path": "../types" },
    { "path": "../backend-core" },
  ],
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}