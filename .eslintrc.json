{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "public",
    "*.spec.js",
    "bundle.js"
  ],
  "plugins": ["svelte3"],
  "extends": ["eslint:recommended"],
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    },
    {
      "files": ["**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "plugins": [],
      "extends": [
        "eslint:recommended"
      ],
      "rules": {
        "no-unused-vars": "off",
        "no-inner-declarations": "off",
        "no-case-declarations": "off",
        "no-useless-escape": "off",
        "no-undef": "off",
        "no-prototype-builtins": "off"
      }
    }
  ],
  "rules": {
    "no-self-assign": "off"
  },
  "globals": {
    "GeolocationPositionError": true
  }
}
